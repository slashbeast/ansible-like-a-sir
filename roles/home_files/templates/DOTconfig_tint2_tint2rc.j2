{% set font_size = '10' %}
#---------------------------------------------
# TINT2 CONFIG FILE
#---------------------------------------------

#---------------------------------------------
# BACKGROUND AND BORDER
#---------------------------------------------
rounded = 7
border_width = 2
background_color = #000000 60
border_color = #ffffff 18

rounded = 5
border_width = 0
background_color = #ffffff 18
border_color = #ffffff 50

rounded = 5
border_width = 0
background_color = #ffffff 0
border_color = #ffffff 70

# Launchers
#launcher_icon_theme = black-white_2-Style
#launcher_padding = 5 0 10
#launcher_background_id = 9
#launcher_icon_size = 20
#launcher_item_app = /some/where/application.desktop
#launcher_item_app = /usr/share/applications/keepassx.desktop

#---------------------------------------------
# PANEL
#---------------------------------------------
panel_items = TSBC
panel_monitor = all
panel_position = top center
panel_size = 100% 32
panel_margin = 0 0
panel_padding = 7 0
font_shadow = 0
panel_background_id = 1
wm_menu = 0

#---------------------------------------------
# TASKBAR
#---------------------------------------------
#taskbar_mode = multi_desktop
taskbar_mode = single_desktop
taskbar_padding = 2 3 2
taskbar_background_id = 0

#---------------------------------------------
# TASKS
#---------------------------------------------
task_icon = 0
task_text = 1
task_width = 1700
task_centered = 1
task_padding = 6 3
task_font = DejaVu Sans bold {{ font_size }}
task_font_color = #ffffff 70
task_active_font_color = #ffffff 100
task_background_id = 3
task_active_background_id = 2

#---------------------------------------------
# SYSTRAYBAR
#---------------------------------------------
systray_padding = 0 4 5
systray_background_id = 0

#---------------------------------------------
# CLOCK
#---------------------------------------------
time1_format = %k:%M, %A, %d-%m-%Y
time1_font = DejaVu Sans Bold {{ font_size }}
#time2_format = %A %d %B
#time2_font = sans 6
clock_font_color = #ffffff 100
clock_padding = 1 0
clock_background_id = 0
#clock_lclick_command = xclock
clock_rclick_command = orage

{% if system_type == 'laptop' %} 
#-------------------------------------
# Battery
#-------------------------------------
battery_tooltip = 0
battery_low_status = 20
battery_low_cmd = notify-send -u critical "Battery low"
bat1_font = DejaVu Sans Bold {{ font_size }}
bat2_font = 0
battery_font_color = #ffffff 70
battery_padding = 0 0
battery_background_id = 0
battery_hide = 101
battery_lclick_command =
battery_rclick_command =
battery_mclick_command =
battery_uwheel_command =
battery_dwheel_command =
ac_connected_cmd = notify-send -u normal "AC connected"
ac_disconnected_cmd = notify-send -u normal "AC disconnected"
{% endif %}

#---------------------------------------------
# MOUSE ACTION ON TASK
#---------------------------------------------
mouse_middle = none
mouse_right = none
mouse_scroll_up = none
mouse_scroll_down = none

